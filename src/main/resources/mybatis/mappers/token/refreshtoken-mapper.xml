<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.petmate.repository.mybatis.token.RefreshTokenMapper">

    <insert id="saveToken">
        INSERT
                INTO
        REFRESH_TOKEN (
                OWNER_NO,
        REFRESH_TOKEN
        )

        VALUES (
                #{ownerNo},
                #{refreshToken}
        )

    </insert>

    <delete id="deleteByToken">
        DELETE
                FROM
        REFRESH_TOKEN

        WHERE
                REFRESH_TOKEN =
        #{refreshToken}

    </delete>

</mapper>

